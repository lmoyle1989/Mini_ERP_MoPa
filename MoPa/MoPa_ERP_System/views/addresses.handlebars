                <div>
                    <label>Email: 
                        <input maxlength="100" name="email_input" size="30" type="text" value="{{customerEmail}}" /> 
                    </label>
                </div>
                <div>
                    <label>Phone Number: 
                        <input maxlength="10" name="phone_number_input" size="10" type="number" value="{{customerPhone}}" /> 
                    </label>
                <input type="hidden" name="customerID" value={{customerID}}>
                <br/>
                {{/each}}
                    <input id="addCustomerSubmit" type="submit" name= "submit_type" value="Update Customer" />
                </div>
               
            </fieldset>
        </form>
</section>
